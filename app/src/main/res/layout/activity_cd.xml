<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CdActivity">

    <TextView
        android:id="@+id/tvTituloCd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/tvAutorCd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/tvTituloCd"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tvCompania"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/tvAutorCd"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tvAnio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/tvCompania"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/tvAnio"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/ivBandera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPrecio"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>